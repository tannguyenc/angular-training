{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@task-reminder-client/components/task-list": [
        "libs/components/task-list/src/index.ts"
      ],
      "@task-reminder-client/layouts": ["libs/layouts/src/index.ts"],
      "@task-reminder-client/pages/detail": ["libs/pages/detail/src/index.ts"],
      "@task-reminder-client/pages/home": ["libs/pages/home/src/index.ts"],
      "@task-reminder-client/pages/login": ["libs/pages/login/src/index.ts"],
      "@task-reminder-client/services/task": [
        "libs/services/task/src/index.ts"
      ],
      "@task-reminder-client/services/user": [
        "libs/services/user/src/index.ts"
      ],
      "@task-reminder-client/states/task": ["libs/states/task/src/index.ts"],
      "@task-reminder-client/states/user": ["libs/states/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
